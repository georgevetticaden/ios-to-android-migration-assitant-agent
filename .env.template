# iOS to Android Migration Assistant - Environment Configuration
# Copy this file to .env and fill in your credentials

# ===== SHARED CONFIGURATION =====

# Migration Database (shared across all tools)
# This database stores the complete migration state
MIGRATION_DB_PATH=~/.ios_android_migration/migration.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=./logs

# ===== PHOTO MIGRATION CONFIGURATION =====

# Apple Credentials (required for photo migration)
APPLE_ID=your.email@icloud.com
APPLE_PASSWORD=your_apple_password

# Gmail API Credentials (for monitoring transfer completion emails)
# Download from Google Cloud Console: https://console.cloud.google.com/
GMAIL_CREDENTIALS_PATH=./credentials/gmail_creds.json

# Google Account (for dashboard photo counting via Playwright)
GOOGLE_EMAIL=your.google.email@gmail.com
GOOGLE_PASSWORD=your_google_password

# Session Management
ICLOUD_SESSION_DIR=~/.icloud_session
GOOGLE_SESSION_DIR=~/.google_session

# Progress Check Settings
PROGRESS_CHECK_INTERVAL_HOURS=6

# Browser Settings
BROWSER_HEADLESS=false
BROWSER_TIMEOUT=30000

# Screenshots Directory
SCREENSHOT_DIR=./screenshots

